<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LisMove" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/AccentColor</item>
        <item name="colorPrimaryVariant">@color/red_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/AccentColor</item>
        <item name="colorSecondaryVariant">@color/AccentColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="dialogCornerRadius">6dp</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <!-- Base application theme. -->
    <style name="Theme.LisMove.Dark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/AccentColor</item>
        <item name="colorPrimaryVariant">@color/red_main</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/AccentColor</item>
        <item name="colorSecondaryVariant">@color/AccentColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="dialogCornerRadius">6dp</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="Theme.LisMove.noActionBar" parent="Theme.LisMove">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
    </style>

    <style name="Theme.LisMove.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">32dp</item>
        <item name="backgroundTint">@color/red_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.LisMove.Button.Borderless" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">32dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/red_main</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.LisMove.Chip" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_image_tint</item>
    </style>

    <style name="ChiliPhotoPicker.Light.LisMove" parent="ChiliPhotoPicker.Light">
        <item name="pickerControlColor">@color/red_main</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="backgroundTint">@color/tab_background</item>
    </style>

    <style name="Theme.LisMove.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="Widget.MPM.Menu.Dark.CustomBackground">
        <item name="android:colorBackground">@color/gray_image_tint</item>
    </style>


    <style name="Theme.SalesIQ.Base.DarkActionBar" parent="Theme.SalesIQ.Light.DarkActionBar">
        <item name="siq_launcher_backgroundcolor">@color/red_main</item>
        <item name="siq_launcher_unreadbadge_backgroundcolor">@color/gray_image_tint</item>
        <item name="siq_launcher_unreadbadge_textcolor">@color/white</item>
        <item name="colorPrimary">@color/AccentColor</item>
        <item name="colorPrimaryDark">@color/AccentColor</item>
        <item name="colorAccent">@color/AccentColor</item>
    </style>

    <style name="Theme.SalesIQ.Base.Dark" parent="Theme.SalesIQ.Dark">
        <item name="siq_launcher_backgroundcolor">@color/red_main</item>
        <item name="siq_launcher_unreadbadge_backgroundcolor">@color/gray_image_tint</item>
        <item name="siq_launcher_unreadbadge_textcolor">@color/white</item>
        <item name="colorPrimary">@color/AccentColor</item>
        <item name="colorPrimaryDark">@color/AccentColor</item>
        <item name="colorAccent">@color/AccentColor</item>
    </style>

    <style name="Theme.LisMove.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LisMove.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LisMove.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>