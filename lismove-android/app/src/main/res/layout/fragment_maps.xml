<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<fragment
    android:id="@+id/gMapFragment"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".maps.MapsActivity" />

    <ImageButton
        app:layout_constraintCircleRadius="2dp"
        android:id="@+id/settingsButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="12dp"
        android:background="#D8FFFFFF"
        android:scaleType="centerInside"
        android:src="@drawable/ic_baseline_layers_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/gray_image_tint" />

    <ImageButton
        android:padding="8dp"
        android:id="@+id/addFountainButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerInside"
        android:background="#D8FFFFFF"
        app:srcCompat="@drawable/ic_rapport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsButton"
        />


</androidx.constraintlayout.widget.ConstraintLayout>