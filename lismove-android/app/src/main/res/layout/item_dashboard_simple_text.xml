<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/dashboardItemImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/dashboardItemText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dashboardItemText"
                app:srcCompat="@drawable/ic_baseline_mail_outline_24"
                app:tint="@color/gray_image_tint" />


    <TextView
        android:id="@+id/dashboardItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:text="18,00"
        android:fontFamily="@font/open_sans_extrabold"
        app:fontFamily="@font/open_sans_extrabold"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dashboardItemImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_max="0dp" />

            <TextView
                android:id="@+id/dashboardItemTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km"
                android:textSize="16sp"
                android:fontFamily="@font/open_sans_extrabold"
                app:fontFamily="@font/open_sans_extrabold"
                app:layout_constraintBaseline_toBaselineOf="@+id/dashboardItemText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/dashboardItemText" />


</androidx.constraintlayout.widget.ConstraintLayout>