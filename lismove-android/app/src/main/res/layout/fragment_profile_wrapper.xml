<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.ProfileWrapperFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <it.lismove.app.android.general.ui.MenuItemView
            android:id="@+id/profileDetailMenuItem"
            layout="@layout/view_menu_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menuTitle="Anagrafica"
            app:showArrow="true"/>

        <it.lismove.app.android.general.ui.MenuItemView
            android:id="@+id/profileHistoryMySession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menuTitle="Le mie sessioni"
            app:showArrow="true" />
        <it.lismove.app.android.general.ui.MenuItemView
            android:id="@+id/profileHistoryHomeWorkSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menuTitle="Le mie sessioni casa - scuola/lavoro"
            app:showArrow="true"
            />

        <it.lismove.app.android.general.ui.MenuItemView
            android:id="@+id/profileMyAwards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menuTitle="I miei premi"
            app:showArrow="true" />




        <Button
            android:id="@+id/logoutOutButton"
            style="@style/Theme.LisMove.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="Logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline" />


    </LinearLayout>

</ScrollView>